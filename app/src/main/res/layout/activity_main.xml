<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Please Select an Instrument" />

    <Button
        android:id="@+id/buttonUkulele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickUkulele"
        android:text="Ukulele" />

    <Button
        android:id="@+id/buttonGuitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickGuitar"
        android:text="Guitar" />

    <Button
        android:id="@+id/savedChordsGuitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Saved Guitar Chords" />
    <Button
        android:id="@+id/savedChordsUkulele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Saved Ukulel Chords"
        />

</LinearLayout>